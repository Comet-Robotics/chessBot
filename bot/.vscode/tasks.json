{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Autoformat Code",
      "type": "shell",
      "command": "clang-format -i include/chessbot/* main/src/*",
      "problemMatcher": []
    },
    {
      "label": "Disable OTA Updates",
      "type": "shell",
      "command": "${config:idf.pythonBinPathWin} support.py ota-disable",
      "options": {
        "env": {
          "PATH": "${env:PATH}:${config:idf.customExtraPaths}",
          "espPythonPath": "${config:idf.pythonBinPathWin}",
          "espIdfPath": "${config:idf.espIdfPathWin}"
        }
      }
    },
    {
      "label": "Deploy OTA Update",
      "type": "shell",
      "command": "${config:idf.pythonBinPathWin} support.py ota",
      "options": {
        "env": {
          "PATH": "${env:PATH}:${config:idf.customExtraPaths}",
          "espPythonPath": "${config:idf.pythonBinPathWin}",
          "espIdfPath": "${config:idf.espIdfPathWin}"
        }
      }
    },
    {
      "label": "Update DNS Entry",
      "type": "shell",
      "command": "${config:idf.pythonBinPathWin} support.py dns",
      "options": {
        "env": {
          "PATH": "${env:PATH}:${config:idf.customExtraPaths}",
          "espPythonPath": "${config:idf.pythonBinPathWin}",
          "espIdfPath": "${config:idf.espIdfPathWin}"
        }
      }
    }
  ]
}